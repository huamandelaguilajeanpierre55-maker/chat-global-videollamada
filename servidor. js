const express = require("express");
const app = express();
const http = require("http").createServer(app);
const io = require("socket.io")(http);

app.use(express.static("public")); // Carpeta con tu index.html

io.on("connection", (socket) => {
    console.log("ðŸ”µ Un usuario se conectÃ³");

    socket.on("chat message", (msg) => {
        io.emit("chat message", msg); // reenviar a todos
    });

    socket.on("disconnect", () => {
        console.log("ðŸ”´ Un usuario se desconectÃ³");
    });
});

http.listen(3000, () => {
    console.log("âœ… Servidor corriendo en http://localhost:3000");
});